{% extends '::theme.html.twig' %}

{% block title %}
    Edit Employee-AGEPE
{% endblock title %}

{% block title_head_bar %}
    EDIT EMPLOYEE
{% endblock title_head_bar %}

{% block container_fluid %}

    <div class="row page-header">
        <div class="col-lg-12">
            <h1 class="col-lg-1">
                <a class="btn btn-primary btn-lg" href="{{ path('employee') }}">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true">
                        </span>
                </a>
            </h1>
            <h1 class="col-lg-8">
                Edit Employee " {{ entity.firstName }} "
            </h1>
        </div>
    </div>


    <div class="well">

