        {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">

            {{ form_label(edit_form.firstName, "First Name :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.firstName, {'attr': {'class': 'form-control'}}) }}
            </div>

            {{ form_label(edit_form.lastName, "Last Name :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.lastName, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(edit_form.sexe, "Sexe :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-2">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.sexe, {'attr': {'class': 'form-control'}})}}
            </div>

            {{ form_label(edit_form.phoneNumbre, "Phone Number :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.phoneNumbre, {'attr': {'class': 'form-control'}})}}
            </div>
        </div>


        <div class="form-group">
            {{ form_label(edit_form.identificationType, "Identification Type :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-2">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.identificationType, {'attr': {'class': 'form-control'}})}}
            </div>

            {{ form_label(edit_form.identificationNumbre, "Identification Numbre :", {'label_attr': {'class': 'col-sm-3 control-label '}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.identificationNumbre,{'attr': {'class': 'form-control'}})}}
            </div>
        </div>

        <div class="form-group">

            {{ form_label(edit_form.contractType, "Contract Type :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-2">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.contractType, {'attr': {'class': 'form-control'}})}}
            </div>

            {{ form_label(edit_form.joinDate, "Join Date :", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.joinDate, {'value': "now"|date("m/d/Y"),'attr': {'class': 'form-control btn-md center-block'}})}}
            </div>
        </div>

        <div class="form-group">

            {{ form_label(edit_form.departureDate, "Departure Date :", {'label_attr': {'class': 'col-sm-7 control-label'}}) }}

            {% if edit_form.departureDate <= edit_form.joinDate %}
                {% set x="hidden" %}
                {% set class="fa fa-plus" %}
            {% else %}
                {% set x="" %}
                {% set class="fa fa-minus" %}
            {% endif %}

            <div class="col-sm-3" id="departureDate" {{ x }}>
                {# Génération de l'input. #}
                {{ form_widget(edit_form.departureDate, {'attr': {'class': 'form-control btn-md center-block'}})}}
            </div>
            <div class="btn btn-link" id="show">
                <span id="plus" class="{{ class }}"></span>
            </div>
        </div>

        <div class="form-group">

            {{ form_label(edit_form.adresse, "Adresse :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-8">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.adresse, {'attr': {'class': 'form-control'}})}}
            </div>
        </div>

        <div class="form-group">

            <div class="col-lg-12">

            </div>

        </div>

        <div class="form-group">

            <div class="col-lg-4"></div>
            <div class="relative col-xs-2">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success form-control'}})}}
            </div>

        </div>

        {{ form_end(edit_form) }}


    </div>
{% endblock container_fluid %}

{% block script %}
    <script src="{{ asset('js/testAla.js') }}"></script>
{% endblock script %}
