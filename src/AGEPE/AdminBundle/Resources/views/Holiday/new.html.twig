{% extends '::Theme.html.twig' %}

{% block title %}
    Add Holiday-AGEPE
{% endblock title %}

{% block title_head_bar %}
    ADD HOLIDAY
{% endblock title_head_bar %}
{% block container_fluid %}

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header col-lg-8">
                ADD HOLIDAY
            </h1>
            <h1 class=" col-lg-2">
                <a class="btn btn-default btn-xs" href="{{ path('holiday') }}">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true">
                </span>
                    Back to the list
                </a>
            </h1>
        </div>
    </div>

    <div class="well">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">

            {{ form_label(form.title, "Title :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>

        <div class="form-group">

            {{ form_label(form.holidayDate, "Date :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(form.holidayDate, {'attr': {'class': 'form-control btn-md center-block'}}) }}
            </div>
        </div>

        <div class="form-group">

            <div class="col-lg-8"></div>
            <div class="relative col-xs-2">
                {# Génération de l'input. #}
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success form-control'}})}}
            </div>
        </div>

        {{ form_end(form) }}

    </div>

{% endblock container_fluid %}