{% extends '::theme.html.twig' %}

{% block title %}
    Edit Holiday-AGEPE
{% endblock title %}

{% block title_head_bar %}
    EDIT HOLIDAY
{% endblock title_head_bar %}

{% block container_fluid %}
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header col-lg-8">
                Edit Employee " {{ entity.title }} "
            </h1>
            <h1 class="page-header col-lg-2">
                <a class="btn btn-default btn-xs" href="{{ path('holiday') }}">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true">
                </span>
                    Back to the list
                </a>
            </h1>
        </div>
    </div>

    <div class="well">

        {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

        <div class="form-group">

            {{ form_label(edit_form.title, "Title :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">

            {{ form_label(edit_form.holidayDate, "Date :", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-3">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.holidayDate, {'attr': {'class': 'form-control btn-md center-block'}}) }}
            </div>
        </div>

        <div class="form-group">

            <div class="col-lg-6"></div>
            <div class="relative col-xs-2">
                {# Génération de l'input. #}
                {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-success form-control'}})}}
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock container_fluid %}

