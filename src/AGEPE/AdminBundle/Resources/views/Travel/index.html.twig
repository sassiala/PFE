{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Travel list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Fromdate</th>
                <th>Todate</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('travel_show', { 'id': entity.id }) }}">{{ entity.Title }}</a></td>
                <td>{% if entity.fromDate %}{{ entity.fromDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.toDate %}{{ entity.toDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('travel_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('travel_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('travel_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
